#!/bin/bash
# Reload borders launch agent

echo "🔄 Reloading borders..."
if launchctl kickstart -k "gui/$(id -u)/com.felixkratz.borders" 2>/dev/null; then
  echo "✅ Borders reloaded successfully"
else
  echo "❌ Failed to reload borders. Is it running?"
  echo "   Try: launchctl list | grep borders"
  exit 1
fi
