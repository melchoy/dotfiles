#!/bin/bash
# Apply window manager config from ~/.env.local: start/stop AeroSpace and Sketchybar per ENABLE_* flags.

BINDIR="$(cd "$(dirname "$0")" && pwd)"

[[ -f "$HOME/.env.local" ]] && source "$HOME/.env.local"

if [[ "$ENABLE_AEROSPACE" != "1" ]]; then
	"$BINDIR/aerospace" stop
else
	"$BINDIR/aerospace" restart
fi

if [[ "$ENABLE_SKETCHYBAR" != "1" ]]; then
	"$BINDIR/sketchybar" stop
else
	"$BINDIR/sketchybar" reload
fi

echo "âœ… Window manager config applied"
