#!/bin/bash
# Restart AeroSpace window manager

echo "🔄 Restarting AeroSpace..."

# Quit AeroSpace
if osascript -e 'quit app "AeroSpace"' 2>/dev/null; then
  echo "   Stopped AeroSpace"
else
  echo "   AeroSpace was not running"
fi

# Wait a moment
sleep 1

# Start AeroSpace
if open -a AeroSpace 2>/dev/null; then
  echo "✅ AeroSpace restarted"
else
  echo "❌ Failed to start AeroSpace"
  exit 1
fi
